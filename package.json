{
  "name": "node-service-starter-ts",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "build": "env-cmd -f .env webpack --config webpack.config.js",
    "build-ts": "tsc",
    "start-prod": "env-cmd -f .env node build/bundled.js",
    "start": "run-s clean build-ts && run-p watch-ts watch-nodemon",
    "watch-ts": "tsc -w",
    "watch-nodemon": "env-cmd -f .env nodemon build/index.js",
    "clean": "rm -rf build"
  },
  "author": "Cheri Hung",
  "license": "MIT",
  "engines": {
    "node": "12.16.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "env-cmd": "^10.0.1",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3",
    "webpack": "^4.41.5",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "ts-loader": "^7.0.1",
    "webpack-cli": "^3.3.10"
  }
}
